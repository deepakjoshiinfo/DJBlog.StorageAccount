@model List<DJBlogs.StorageAccount.Models.FileModel>
@{
    ViewData["Title"] = "Files";
}

<style>
    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        width: 270px;
        height: 200px;
    }
</style>
<div class="row">
    @foreach (DJBlogs.StorageAccount.Models.FileModel file in Model)
    {
        <div class="col-md-3">
            <a style="cursor:pointer;" onclick="location.href ='@Url.Action("AnalyzeImage", "Home", new { url = file.URL })'">
                <img src="@file.URL" alt="@file.Name" />
                <div class="col-md-12 text-center">
                    <b>@file.Name</b>
                </div>
            </a>
        </div>
    }
</div>
